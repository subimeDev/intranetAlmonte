{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "rootDirectory": "frontend-ubold",
    "watchPatterns": [
      "frontend-ubold/src/**",
      "frontend-ubold/public/**",
      "frontend-ubold/package.json",
      "frontend-ubold/next.config.ts"
    ]
  },
  "deploy": {
    "startCommand": "cd frontend-ubold && node server.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100
  }
}


